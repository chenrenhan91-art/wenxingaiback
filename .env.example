# 后端端口
PORT=3000

# JWT 签名密钥（务必改成随机长字符串）
JWT_SECRET=change-me-to-a-long-random-string
JWT_EXPIRES_IN=30d

# 后台管理密码（用于后台网页登录/设置专业版）
ADMIN_PASSWORD=change-me-admin-password

# 可选：后台管理员登录 token 有效期
ADMIN_JWT_EXPIRES_IN=12h

# 注册频控：同一 IP 每天最多注册次数
REGISTER_MAX_PER_IP_PER_DAY=2

# 如果你让 Node 直接暴露公网，不要开 true；Nginx 反代同机部署一般不需要改
# TRUST_PROXY=true

# Make.com 上游（把你现在前端的 WEBHOOK_URL / API_KEY 挪到这里）
MAKE_WEBHOOK_URL=https://hook.us2.make.com/xxxxxx
MAKE_API_KEY=xxxxxx

# 可选：SQLite 路径（默认项目根目录 data.sqlite）
# SQLITE_PATH=./data.sqlite
